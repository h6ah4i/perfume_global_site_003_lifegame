## Draw
##

# clear screen
[draw 1]

# global translation
[push]
[translate 45 45]

[144][repeat]
	# INDEX
	[143][ref -2][sub]
	# Y
	[ref -1][div 12][floor]
	# X
	[ref -2][mod 12]

	# CELL(0, 0)
	[ref -3][154][sub][ref]

	[ifgt 0]
		# Y * 60
		[ref -2][mul 60]
		# X * 60
		[ref -2][mul 60]
		# (X, Y)
		[swap]
		[push]
			[translate]
			[speed 1000]
			[brush 0]
			[draw 0]
		[pop]
	[end]

	[remove]
	[remove]
	[remove]
[end]

[pop]

