## Update
##
[144][repeat]
	# CENTER-INDEX
	[143][ref -2][sub]
	# TOP-LEFT, TOP, TOP-RIGHT
	[ref -1][add 0][ref][add -152][ref]
	[ref -2][add 144][ref][add -153][ref]
	[ref -3][add 288][ref][add -154][ref]
	# LEFT, RIGHT
	[ref -4][add 432][ref][add -155][ref]
	[ref -5][add 576][ref][add -156][ref]
	# BOTTOM-LEFT, BOTTOM, BOTTOM-RIGHT
	[ref -6][add 720][ref][add -157][ref]
	[ref -7][add 864][ref][add -158][ref]
	[ref -8][add 1008][ref][add -159][ref]

	# Count living neighbors
	[add][add][add][add][add][add][add]

	# CENTER
	[ref -2][ref -3][sub][add -153][ref]
	# Next-gen CENTER cell
	[mul 8][add][add 1152][ref]

	# remove 1 stack entry
	[swap][remove]
	# push next-generation cell state into stack
	[swap]
[end]

[delay 100]
# put offset adjustments
[-1][-1][-1][-1][-1]

# copy global loop counter
[ref -150]
[end]

